<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
        <%= image_tag(product.image_url, class: "img-responsive") unless product.image_url.blank? %>
        <p><%= product.name %></p>
        <p><%= product.description %></p>
        <p><%= product.color %></p>
        <p><%= product.price %></p>
      </div><!-- /col -->
    <% end %>
  </div><!-- /row -->
</div><!-- /container -->

<br>

<%= link_to 'New Product', new_product_path %>
