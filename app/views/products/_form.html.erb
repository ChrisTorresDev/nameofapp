<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render @product %>

  <div class="field">
    <%= form.label :name, class:"col-2 col-form-label" %>
    <%= form.text_field :name, class:"form-control", type:"text", placeholder:"Supper cool thing", id: :product_name %>
  </div>

  <div class="field">
    <%= form.label :description, class:"col-2 col-form-label" %>
    <%= form.text_area :description, class:"form-control", type:"text", placeholder:"Only the best", id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :image_url, class:"col-2 col-form-label" %>
    <%= form.text_field :image_url, class:"form-control", type:"text", placeholder:"URL", id: :product_image_url %>
  </div>

  <div class="field">
    <%= form.label :colour, class:"col-2 col-form-label" %>
    <%= form.text_field :colour, class:"form-control", type:"text", placeholder:"Black", id: :product_colour %>
  </div>

  <div class="field">
    <%= form.label :price, class:"col-2 col-form-label" %>
    <%= form.text_field :price, class:"form-control currency", type:"number", placeholder:"$1000", id: :product_price %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-default" %>
  </div>
<% end %>
