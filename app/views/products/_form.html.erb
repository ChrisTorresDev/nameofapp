<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render @product %>

  <div class="row">
    <div class="col-md-4">
      
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class:"form-control", type:"text", placeholder:"Super cool thing", id: :product_name %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class:"form-control", type:"text", placeholder:"Only the best", id: :product_description %>
      </div>

      <div class="form-group">
        <%= form.label :image_url %>
        <%= form.text_field :image_url, class:"form-control", type:"text", placeholder:"URL", id: :product_image_url %>
      </div>

      <div class="form-group">
        <%= form.label :colour %>
        <%= form.text_field :colour, class:"form-control", type:"text", placeholder:"Black", id: :product_colour %>
      </div>

      <div class="form-group">
        <%= form.label :price %>
        <%= form.text_field :price, class:"form-control currency", type:"number", placeholder:"$1000", id: :product_price %>
      </div>

      <%= form.submit class:"btn btn-info" %>
    </div>
  </div>

<% end %>
