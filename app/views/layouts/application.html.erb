<!DOCTYPE html>
<html>
  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="footer, links, icons" />

    <title>Nameofapp</title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'ratyrate.js', "data-turbolinks-track" => false %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

  </head>

  <body>

    <% if notice %>
      <div id="notice" class="alert alert-warning" role="alert"><%= notice %></div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger" role="alert"><%= alert %></div>
    <% end %>

  	<nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">gearDventures</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to 'Products', products_path %></li>
            <li><%= link_to 'About', simple_pages_about_path %></li>
            <li><%= link_to 'Contact', simple_pages_contact_path %></li>
          </ul>
          <button type="submit" class="btn btn-default">
              <% if user_signed_in? %>
                <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
              <% else %>
                <%= link_to('Login', new_user_session_path) %>
              <% end %>
            </button>
          <form class="navbar-form navbar-right">
            <div class="form-group">
              <%= form_with(url: products_path, method: 'get', local: true) do |form| %>
                <%= form.label :q, 'Search for:', class:"hidden" %>
                <%= form.text_field :q, id: 'q', value: params[:q], class:"form-control", placeholder:"Search Term" %>
                <%= form.submit 'Search', class:"btn btn-default" %>
              <% end %>
            </div>
          </form>
        </div>
      </div>
  	</nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <footer class="footer-distributed">
      <div class="footer-right">
        <a href="#"><i class="fa fa-facebook"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-linkedin"></i></a>
        <a href="#"><i class="fa fa-github"></i></a>
      </div>

      <div class="footer-left">
        <p class="footer-links">
          <a><%= link_to 'Home', simple_pages_index_path %></a>
          ·
          <a><%= link_to 'Products', products_path %></a>
          ·
          <a><%= link_to 'About', simple_pages_about_path %></a>
          ·
          <a><%= link_to 'Contact', simple_pages_contact_path %></a>
        </p>
        <p>gearDventure &copy;<%= Date.today.year %></p>
      </div>
    </footer>

  </body>
</html>
